<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps2"
    android:orientation="vertical"
    tools:context=".activities.request.Request3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemon_milk"
            android:gravity="center"
            android:text="@string/request_title"
            android:textColor="@color/colorHint"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:fontFamily="@font/lemon_milk_light"
            android:paddingLeft="20dp"
            android:text="@string/subtitle_fund"
            android:textColor="@color/colorFont"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/sp_trx_request3"
            android:layout_width="360dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/bginput2"
            android:padding="6dp" />

        <EditText
            android:id="@+id/et_description_request3"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/bginput2"
            android:padding="6dp"
            android:paddingStart="@dimen/et_start"
            android:hint="Description"
            android:textColorHint="@color/colorHint"
            android:textColor="@color/colorHint"
            android:textSize="22sp"
            android:isScrollContainer="true"
            android:maxLines="3"
            android:maxLength="150"/>

        <!--<TextView-->
            <!--android:id="@+id/tv_currency_request3"-->
            <!--android:layout_width="360dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_margin="8dp"-->
            <!--android:background="@drawable/bginput2"-->
            <!--android:padding="6dp"-->
            <!--android:paddingStart="@dimen/et_start"-->
            <!--android:text="IDR"-->
            <!--android:textColor="@color/colorHint"-->
            <!--android:textSize="22sp" />-->

        <EditText
            android:id="@+id/et_amount_request3"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/bginput2"
            android:padding="6dp"
            android:paddingStart="@dimen/et_start"
            android:hint="Amount"
            android:textColorHint="@color/colorHint"
            android:textColor="@color/colorHint"
            android:textSize="22sp"
            android:inputType="numberSigned"
            android:maxLines="1"
            android:maxLength="10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="18dp">

            <TextView
                android:id="@+id/tv_upload_request3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/bginput2"
                android:padding="6dp"
                android:paddingStart="@dimen/et_start"
                android:text="Upload File"
                android:textColor="@color/colorHint"
                android:textSize="22sp" />

            <ImageButton

                android:id="@+id/ibtn_doc_detail_request3"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:background="@drawable/bginput"
                android:src="@drawable/ic_action_upload" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_submit_request3"
                android:layout_width="140dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bginput5"
                android:text="@string/btn_next"
                android:textColor="@color/colorHint"
                android:textSize="22sp" />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>