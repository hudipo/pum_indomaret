<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-60dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="240dp"
            android:layout_height="260dp"
            android:layout_marginTop="80dp"
            app:srcCompat="@mipmap/ic_icon_logo_pum_idm" />

    </LinearLayout>


    <EditText
        android:id="@+id/et_emp_num_regis"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/et_pass_regis"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_person"
        android:ems="10"
        android:hint=" NIK"
        android:inputType="numberSigned"
        android:textSize="16sp" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_pass_regis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_pin_regis"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:drawableStart="@drawable/ic_action_pass"
            android:ems="10"
            android:hint=" Password"

            android:inputType="textPassword"
            />
    </android.support.design.widget.TextInputLayout>





    <EditText

        android:id="@+id/et_pin_regis"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btn_regis"
        android:layout_alignBottom="@+id/btn_regis"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="#11000000"
        android:drawableStart="@drawable/ic_access_code"
        android:ems="10"
        android:hint=" PIN"
        android:inputType="numberPassword" />

    <android.support.v7.widget.CardView
        android:id="@+id/btn_regis"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/tv_login_in_regis"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_regis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_login_in_regis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:text="@string/string_login_in_regis"
        android:textAlignment="center"
        android:textColor="#fff" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


    </LinearLayout>
</RelativeLayout>
